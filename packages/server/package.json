{
  "name": "@course-tracker/server",
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx}\"",
    "lint": "eslint \"**/*.{js,jsx}\" --quiet",
    "lint:fix": "eslint \"**/*.{js,jsx}\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run format",
      "npm run lint:fix"
    ]
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "husky": "^4.2.5"
  }
}
